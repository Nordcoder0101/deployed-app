@using beltexam.Models
@model User

<h1 class="LoginHeader">Register to the Activity Planner!</h1>
<a class="login" href="/ViewLoginUser">Login</a>
<div class = "form-container">
  <div class="left-login">
    <form class="form" method="post" asp-action="RegisterUser" asp-controller="LoginReg">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName">
      <span asp-validation-for="FirstName"></span>

      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName">
      <span asp-validation-for="LastName"></span>

      <label asp-for="Email">Email Name</label>
      <input asp-for="Email">
      <span asp-validation-for="Email"></span>
      <input type="submit" value="Sign Up Now" class="btn btn-primary submit">
    </div>
  <div class="right-login">
      <label asp-for="Password">Password</label>
      <input asp-for="Password">
      <span asp-validation-for="Password"></span>

      <label asp-for="Confirm">Confirm</label>
      <input asp-for="Confirm">
    <span asp-validation-for="Confirm"></span>
  </form>
  </div>
</div>

